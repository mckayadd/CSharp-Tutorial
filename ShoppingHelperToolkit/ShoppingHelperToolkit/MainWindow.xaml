<Window x:Class="ShoppingHelperToolkit.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vm="clr-namespace:ShoppingHelperToolkit.ViewModels"
        xmlns:views="clr-namespace:ShoppingHelperToolkit.Views"
        Title="{Binding Title}"
        Height="450" Width="800">

    <Window.DataContext>
        <vm:MainViewModel/>
    </Window.DataContext>

    <Grid Margin="10">
        <TabControl>

            <!-- Create List Tab -->
            <TabItem Header="Create List">
                <views:CreateListView
                    DataContext="{Binding CreateList}" />
            </TabItem>

            <!-- Previous Shoppings Tab -->
            <TabItem Header="Previous Shoppings">
                <views:PreviousShoppingsView
                    DataContext="{Binding Previous}" />
            </TabItem>

        </TabControl>
    </Grid>

</Window>
